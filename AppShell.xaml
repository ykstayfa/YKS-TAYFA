       xmlns:views="clr-namespace:YKSTayfa.Views"
       x:Class="YKSTayfa.AppShell">

    <TabBar>
        <ShellContent Title="Ana Sayfa" ContentTemplate="{DataTemplate views:HomePage}" />
        <ShellContent Title="Ayarlar" ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>

    <ShellContent Route="PrivacyPage" ContentTemplate="{DataTemplate views:PrivacyPage}" />
    <ShellContent Route="AboutPage" ContentTemplate="{DataTemplate views:AboutPage}" />
    <ShellContent Route="ScoreCalcPage" ContentTemplate="{DataTemplate views:ScoreCalcPage}" />
    <ShellContent Route="CrashLogPage" ContentTemplate="{DataTemplate views:CrashLogPage}" />
    <ShellContent Route="HealthCheckPage" ContentTemplate="{DataTemplate views:HealthCheckPage}" />
    <ShellContent Route="ChatPage" ContentTemplate="{DataTemplate views:ChatPage}" />
